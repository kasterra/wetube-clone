extends base.pug

block content
  h4 Edit Video
  form(method="POST")
    input(
      name="title",
      placeholder="Video Title",
      value=video.title,
      required,
      maxlength=80
    )
    input(
      type="text",
      name="description",
      required,
      placeholder="Description",
      minlength=20,
      value=video.description
    )
    input(
      type="text",
      name="hashtags",
      required,
      placeholder="hashtags, seperated by comma",
      value=video.hashtags.join()
    )
    input(value="Save", type="submit") 
