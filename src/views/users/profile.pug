extends ../base.pug
include ../mixins/video

block content 
    div.profile__data
        if user.avatarUrl
            img(src=user.avatarUrl).avatar
        else 
            img(src="https://wetube-kasterra.s3.ap-northeast-2.amazonaws.com/user-avatar.png").avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No Videos Found