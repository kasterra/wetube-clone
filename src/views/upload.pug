extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(type="text", name="title", required, placeholder="Title", maxlength=80)
    input(type="text", name="description", required, placeholder="Description", minlength=20)
    input(
      type="text",
      name="hashtags",
      required,
      placeholder="hashtags, seperated by comma"
    )
    input(type="submit", value="Upload Video")
