doctype html
html(lang="ko")
  head
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    title #{pageTitle} | Wetube
  body
    header
      h1=pageTitle
        nav
          ul
            li
              a(href="/videos/upload") Upload Video 
            li 
              a(href="/") Home
            li 
              a(href="/search") Search
            if loggedIn
              li 
                a(href="/users/edit") Edit Profile
              li 
                a(href="/users/logout") Logout
              li 
                a(href=`/users/${loggedInUser._id}`) #{loggedInUser.name}'s profile
            else
              li 
                a(href="/join") Join
              li 
                a(href="/login") Login
    main
      block content
includepartials/footer.pug
